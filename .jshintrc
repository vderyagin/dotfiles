// -*- mode: js -*-

{
  // Enforcing Options:

  "bitwise":   true,
  "camelcase": true,
  "curly":     true,
  "eqeqeq":    true,
  "forin":     true,
  "immed":     true,
  "indent":    2,
  "latedef":   true,
  "newcap":    true,
  "noarg":     true,
  "noempty":   true,
  "nonew":     true,
  "plusplus":  true,
  "quotmark":  true,
  "regexp":    true,
  "strict":    true,
  "trailing":  true,
  "undef":     true,
  "unused":    true,

  // Relaxing Options:

  "es5": true,

  "predef": [
    "Backbone", "_",
    "window",
    "Ember",
    "jQuery", "$"
  ]
}
